

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4));">
  <div class="container">
    <h1>
      <%= @cocktail.name.capitalize %>!
    </h1>
    <p>
    <% @cocktail.doses.each do |dose| %>
      <li>at : <%= dose.ingredient.name %></li>
      <%= link_to "delete dose", dose_path(dose), method: :delete,
            data: { confirm: "Are you sure?" } %>
    <% end %>
    </p>
    <a class="btn btn-flat" href="#">
      <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %>
      <%= link_to "Back to list", cocktails_path %>
    </a>
  </div>
</div>
